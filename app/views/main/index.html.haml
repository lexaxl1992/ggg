%ul#catalogue.mdl-shadow--2dp{ 'data-collapsible': 'accordion' }
	%li#bedrooms
		.collapsible-header
			.hoverWrapper
				%i.custom-icons--bed
				Спальни
		.static-header
			.hoverWrapper
				%i.custom-icons--bed
				Спальни
		%section.collapsible-body.mdl-color--grey-850
			.owl-carousel.owl-theme
				- @bedrooms.each do |bedroom|
					%figure.item.mdl-shadow--2dp.mdl-color--grey-900{"id": "#{bedroom["id"]}"}
						%img.owl-lazy{"data-src": "/uploads/items/thumbs/#{bedroom["id"]}.png"}
						%figcaption
							%span.name= bedroom["name"]
							%span.price= bedroom["price"]["current"].to_s + " ₽"

	%li#kitchens
		.collapsible-header
			.hoverWrapper
