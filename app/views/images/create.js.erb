var modelId = document.createElement('input')
modelId.value = "<%= j @image.id %>"
modelId.id = "for_<%= j @image.id %>"
modelId.setAttribute("name", "img_ids[]")
modelId.setAttribute("type", "hidden")

var modal = document.getElementById("<%= j @windowId %>")
var itemForm = modal.getElementsByTagName('form')[1]
var entity = document.createElement('div')
itemForm.insertBefore(modelId, itemForm.firstChild)
modal.getElementsByClassName('entity-list')[0].appendChild(entity)
entity.innerHTML = "<%= j render 'create' %>"
