%h4.mdl-dialog__title Редактирование товара
%form{"action":"/admin/items", "data-remote":"true", "method":"post"}
  .mdl-dialog__content
    .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
      %input#label.mdl-textfield__input{"name":"item[name]", "type":"text"}
      %label.mdl-textfield__label{"for":"label"} Название товара
    %label.mdl-checkbox.mdl-js-checkbox.mdl-js-ripple-effect{"for":"visible"}
      %input#visible.mdl-checkbox__input{"checked":"checked", "name":"item[modularity]", "type":"checkbox"}
      %span.mdl-checkbox__label Модульность
  .mdl-dialog__actions
    %input.mdl-button.close{"type":"submit", "value":"Сохранить"}
    %button.mdl-button{"type":"button"}= "Свернуть"
    %button.mdl-button{"onclick":"this.parentNode.parentNode.parentNode.remove()", "type":"button"}= "Выйти"
