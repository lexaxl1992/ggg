.dialog-wrapper
	- closeButton = "mdl-button mdl-button--colored mdl-js-button mdl-button--fab mdl-button--mini-fab material-icons"

	.mdl-dialog__actions.close
		%a{"class":"#{closeButton}", "onclick":"this.parentNode.parentNode.parentNode.remove()"}= "close"

	.my-dialog__title
		= image_tag("/assets/logo-min--orange.svg")
		%h3= @item.name
		%spacer
	.mdl-dialog__content
		- if @item.imagesets.size > 0
			%section.gallery
				.imagesets-slider-for
					- @item.imagesets.each do |imageset|
						.imageset
							= image_tag(imageset.photoUrl) unless imageset.photoUrl == nil
							= image_tag(imageset.pictureUrl) unless imageset.pictureUrl == nil
				.imagesets-slider-nav
					- @item.imagesets.each do |imageset|
						- unless imageset.photoUrl == nil
							= image_tag(imageset.photoUrl)
						- else
							= image_tag(imageset.pictureUrl)

		%section.main
			%p= "Тип: модульный" if to_bool(@item.modularity)
			- if @item.price.size > 0
				%p= "Цена: "+@item.price+" рублей"
			%p= "Описание:"
			- if @item.description.size > 0
				%p= @item.description
			- else
				%p= "Нет описания."


