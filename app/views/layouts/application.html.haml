!!! 5
%title ДЮК Мебель
%meta{"name":"keywords", "content":"дюк мебель, мебель краснодар"}
%meta{"content":"8fd14621849c0445", "name":"yandex-verification"}
= csrf_meta_tags
%meta{"name":"turbolinks-cache-control", "content":"no-cache"}
%meta{"name":"viewport", "content":"width=device-width, initial-scale=1.0, minimum-scale=1.0"}
= favicon_link_tag "/favicon.ico", rel:"shortcut icon"
= stylesheet_link_tag			"application",media:"all", "data-turbolinks-track":"reload"
= javascript_include_tag	"vue.min","data-turbolinks-track":"reload"
= javascript_include_tag	"aload.min","data-turbolinks-track":"reload"
= javascript_include_tag	"application","data-turbolinks-track":"reload"
= javascript_include_tag	"owl-fork","data-turbolinks-track":"reload"
= javascript_include_tag	"smooth-scroll.min","data-turbolinks-track":"reload"

%body#event_handler
	- unless params[:action] == "constructor"
		- @layout_class = "mdl-layout--fixed-header"
	-else
		- @header_class = "mdl-layout__header--scroll"
	.mainLayout.mdl-layout.mdl-js-layout{class:"#{@layout_class unless @layout_class.nil?}"}
		%header.mdl-layout__header{class:"#{@header_class unless @header_class.nil?}"}
			.mdl-layout__header-row
				- unless params[:action] == 'constructor'
					%a#to_slider.logo.scrollLink
						= image_tag("logo.png")
				- else
					%a.logo{href:"/"}
						= image_tag("logo.png")
				%span.mdl-layout-title
					%h4
						%a{ href:"tel:+79181451090" }
							%i.material-icons= "call"
							8 918 145 1090
					%small
						%i.material-icons= "location_on"
						Краснодар
				.mdl-layout-spacer
				- classes = "mdl-button mdl-js-button mdl-js-ripple-effect"
				%nav.mdl-navigation.mdl-layout--large-screen-only

					- if [params[:controller], params[:action]] == ["main", "index"]
						#catalogueMenu
							%a#catalogueButton.mdl-button.mdl-js-button.mdl-button--hover= "Ассортимент"
							%ul#catalogueList.mdl-menu.mdl-menu--lower-right.mdl-js-menu{for:"catalogueButton"}
								- $categories.to_a.each do |category|
									- if category.visibility == "1"
										%a.mdl-menu__item.scrollLink{"id":"to_#{category.index}"}= category.label
						%a#to_about.scrollLink{"class":"#{classes}"}= "О компании"
						= link_to("3D-конструктор","/constructor/#prodboard-container","class":"#{classes}","data-turbolinks":"false")

					- else
						#catalogueMenu
							%a#catalogueButton.mdl-button.mdl-js-button.mdl-button--hover= "Ассортимент"
							%ul#catalogueList.mdl-menu.mdl-menu--lower-right.mdl-js-menu{for:"catalogueButton"}
								- $categories.to_a.each do |category|
									- if category.visibility == "1"
										%a.mdl-menu__item{href:"/##{category.index}", "data-turbolinks":"false"}= category.label
						= link_to("О компании", "/#about","class":"#{classes}","data-turbolinks":"false")
						= link_to("3D-конструктор", "/constructor/#prodboard-container","class":"#{classes}","data-turbolinks":"false")

				%button#menu-lower-right.mdl-button.mdl-js-button.mdl-button--icon.mdl-layout--small-screen-only
					%i.material-icons= "more_vert"
				%ul.mdl-menu.mdl-menu--bottom-right.mdl-js-menu.mdl-js-ripple-effect{for:"menu-lower-right"}
					= link_to("3D-конструктор", "/constructor/#prodboard-container", "class":"mdl-menu__item","data-turbolinks":"false")
					= link_to("О компании", "/#about", "class":"mdl-menu__item", "data-turbolinks":"false")

		%main.mdl-layout__content
			- unless params[:action] == "constructor"
				#slider.mdl-shadow--2dp
					= image_tag("carousel/1.jpg")
					= image_tag("carousel/2.jpg")
					= image_tag("carousel/3.jpg")
			= yield

	-#Root element of PhotoSwipe. Must have class pswp.
	.pswp{"aria-hidden" => "true", :role => "dialog", :tabindex => "-1"}
		-#Background of PhotoSwipe.
		-#It's a separate element as animating opacity is faster than rgba().
		.pswp__bg
		-# Slides wrapper with overflow:hidden.
		.pswp__scroll-wrap
			-# Container that holds slides.
			-# PhotoSwipe keeps only 3 of them in the DOM to save memory.
			-# Don't modify these 3 pswp__item elements, data is added later on.
			.pswp__container
				.pswp__item
				.pswp__item
				.pswp__item
			-# Default (PhotoSwipeUI_Default) interface on top of sliding area. Can be changed.
			.pswp__ui.pswp__ui--hidden
				.pswp__top-bar
					-# Controls are self-explanatory. Order can be changed.
					.pswp__counter
					%button.pswp__button.pswp__button--close{:title => "Close (Esc)"}
					%button.pswp__button.pswp__button--share{:title => "Share"}
					%button.pswp__button.pswp__button--fs{:title => "Toggle fullscreen"}
					%button.pswp__button.pswp__button--zoom{:title => "Zoom in/out"}
					-# Preloader demo http://codepen.io/dimsemenov/pen/yyBWoR
					-# element will get class pswp__preloader--active when preloader is running
					.pswp__preloader
						.pswp__preloader__icn
							.pswp__preloader__cut
								.pswp__preloader__donut
				.pswp__share-modal.pswp__share-modal--hidden.pswp__single-tap
					.pswp__share-tooltip
				%button.pswp__button.pswp__button--arrow--left{:title => "Previous (arrow left)"}
				%button.pswp__button.pswp__button--arrow--right{:title => "Next (arrow right)"}
				.pswp__caption
					.pswp__caption__center
