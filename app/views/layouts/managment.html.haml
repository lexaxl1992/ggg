!!! 5
%title ДЮК Мебель
= csrf_meta_tags
%meta{name:'turbolinks-cache-control', content:'no-cache'}
%meta{name:'viewport', content:'width=device-width, initial-scale=1.0, minimum-scale=1.0'}
= favicon_link_tag '/favicon.ico', rel: 'shortcut icon'
= render 'layouts/assets'

%body#event_handler
	%dialog.modal_window.mdl-dialog.category_editor{"id": "edit_bedrooms"}
		%h4.mdl-dialog__title Test title
		.mdl-dialog__content
			%p
				Test content
		.mdl-dialog__actions
			%button.mdl-button{type: "button"} Agree
			%button.mdl-button.close{type: "button"} Disagree
	.mainLayout.mdl-layout.mdl-js-layout.mdl-layout--fixed-header
		%header.mdl-layout__header
			.mdl-layout__header-row
				%a#logo{href: '/admin'}
					= image_tag('logo.png')
				%span.mdl-layout-title
					%small
						%i.material-icons= 'warning'
						Режим администрирования
				.mdl-layout-spacer

				%nav.mdl-navigation.mdl-layout--large-screen-only
					#catalogueMenu
						%a#catalogueButton.mdl-button.mdl-js-button.mdl-button--hover= "Ассортимент"
						%ul#catalogueList.mdl-menu.mdl-menu--lower-right.mdl-js-menu{for: 'catalogueButton'}
							- $categories.each do |category|
								- if category[:visible] == true
									%a.mdl-menu__item{href:"/admin/##{category[:id]}", 'data-turbolinks': 'false'}= category[:label]
					= link_to "Выход", '/', class: 'mdl-button mdl-js-button mdl-js-ripple-effect'

				%button#menu-lower-right.mdl-button.mdl-js-button.mdl-button--icon.mdl-layout--small-screen-only
					%i.material-icons more_vert
				%ul.mdl-menu.mdl-menu--bottom-right.mdl-js-menu.mdl-js-ripple-effect{ for: 'menu-lower-right' }
					= link_to "Выход", '/', class: 'mdl-button mdl-js-button mdl-js-ripple-effect'

		%main.mdl-layout__content
			#slider.mdl-shadow--2dp
				= image_tag('carousel/1.jpg')
				= image_tag('carousel/2.jpg')
				= image_tag('carousel/3.jpg')

			= yield

			%footer.mdl-mini-footer
				.mdl-mini-footer__left-section
					.mdl-logo ДЮК Мебель
					%ul.mdl-mini-footer__link-list
						%li
							%a{:href => "#"} Ссылка
						%li
							%a{:href => "#"} Ещё одна
